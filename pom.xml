        </dependency>
        <dependency>
            <groupId>org.assertj</groupId>
            <artifactId>assertj-guava</artifactId>
            <version>1.1.0</version>
            <scope>test</scope>
        </dependency>
               <!-- mongodb java driver -->
        <dependency>
            <groupId>org.mongodb</groupId>
